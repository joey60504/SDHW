<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/底色"
    tools:context="com.example.myapplication.RegistrationActivity1">


    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="monospace"
        android:text="個人資料"
        android:textColor="@color/blue"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />

    <EditText
        android:id="@+id/firstnameInput"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:fontFamily="monospace"
        android:hint="@string/Enter_name"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/EmailInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv" />

    <EditText
        android:id="@+id/EmailInput"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:fontFamily="monospace"
        android:hint="@string/輸入EMAIL"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/ageInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstnameInput" />

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="440dp"
        android:layout_height="80dp"
        android:fontFamily="monospace"
        android:hint="@string/輸入年齡"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/genderinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailInput" />

    <EditText
        android:id="@+id/genderinput"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:fontFamily="monospace"
        android:hint="@string/生理性別"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/photoinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageInput" />

    <EditText
        android:id="@+id/photoinput"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:fontFamily="monospace"
        android:hint="@string/駕照URL"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderinput" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_blue"
        android:fontFamily="monospace"
        android:text="確定"
        android:textAllCaps="false"
        android:textColor="@color/底色"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoinput" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:background="@drawable/ovalyellow"
        android:fontFamily="monospace"
        android:onClick="datePicker"
        android:text="選取日期"
        android:textColor="@color/底色"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/genderinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toEndOf="@+id/ageInput"
        app:layout_constraintTop_toBottomOf="@+id/EmailInput"
        app:layout_constraintVertical_bias="0.464" />

    <ImageButton
        android:id="@+id/imageButton48"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/底色"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/arrow_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>