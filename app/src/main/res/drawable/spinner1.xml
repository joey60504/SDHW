<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    //第一組item 圓角邊框。
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#FFB703"

                />		//邊框線顏色
            <solid
                android:color="#FFFFFF" />
            <corners android:radius="10dp" />		//圓角度數
            <solid android:color="#FFB703" >		//背景顏色
            </solid>
            <padding android:right="5dp" />		//邊距
            <size
                android:width="300dp"
                android:height="10dp"
                />
        </shape>
    </item>
    //第二組item 插入圖片(spinner箭頭)


    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/down"
            android:antialias="true"
            />
    </item>


</layer-list>